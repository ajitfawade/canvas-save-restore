{
  "name": "minimal-nodejs-boilerplate",
  "version": "1.0.0",
  "description": "Minimal node-express boilerplate for small to medium backend projects",
  "main": "index.js",
  "engines": {
    "node": "12.18.2"
  },
  "scripts": {
    "client-install": "npm install --prefix client",
    "client-build": "cd client &&  npm run build",
    "install-client": "cd client && npm install",
    "client": "npm start --prefix client",
    "server": "nodemon .",
    "start": "node .",
    "server-build": "babel --delete-dir-on-start --out-dir dist --copy-files --ignore \"**/__tests__/**,**/__mocks__/**\" --no-copy-ignored src",
    "build": "npm run client-build && npm run server-build",
    "dev": "concurrently \"npm run server\" \"npm run client\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ajitfawade/minimal-nodejs-boilerplate.git"
  },
  "author": "Ajit Fawade",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ajitfawade/minimal-nodejs-boilerplate/issues"
  },
  "homepage": "https://github.com/ajitfawade/minimal-nodejs-boilerplate#readme",
  "dependencies": {
    "celebrate": "^13.0.3",
    "concurrently": "^5.3.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "http-status-codes": "^2.1.4",
    "lodash": "^4.17.20",
    "loglevel": "^1.6.8",
    "mongoose": "^5.10.7",
    "morgan": "^1.10.0",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.10.5",
    "@babel/preset-env": "^7.10.4",
    "@babel/register": "^7.10.5",
    "nodemon": "^2.0.4"
  }
}
